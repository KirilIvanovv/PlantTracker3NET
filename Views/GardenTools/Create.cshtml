@model PlantTracker3NET.Models.GardenTool
@{ Layout = null; }
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<div class="container mt-5">
    <div class="card p-4 shadow mx-auto" style="max-width: 450px;">
        <h4>New Tool</h4>
        <form asp-action="Create" method="post">
            <div class="mb-3"><label>Name</label><input asp-for="Name" class="form-control" required /></div>
            <div class="mb-3"><label>Description</label><input asp-for="Description" class="form-control" /></div>
            <button type="submit" class="btn btn-info w-100">Save Tool</button>
            <a href="/GardenTools/Index" class="btn btn-link w-100 mt-2">Back to List</a>
        </form>
    </div>
</div>