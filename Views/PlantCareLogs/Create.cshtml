@model PlantTracker3NET.Models.PlantCareLog
@{ Layout = null; }
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<div class="container mt-5"><div class="card p-4 shadow mx-auto" style="max-width: 450px;">
    <h4>Add Care Log</h4>
    <form asp-action="Create" method="post">
        <div class="mb-3"><label>Plant</label>
            <select asp-for="PlantId" class="form-control" asp-items="ViewBag.PlantId" required></select>
        </div>
        <div class="mb-3"><label>Action Taken</label><input asp-for="ActionTaken" class="form-control" placeholder="Watered / Fertilized" required /></div>
        <div class="mb-3"><label>Date</label><input asp-for="Date" type="date" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" /></div>
        <button type="submit" class="btn btn-primary w-100">Save Log</button>
    </form>
</div></div>