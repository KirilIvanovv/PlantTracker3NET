@model IEnumerable<PlantTracker3NET.Models.PlantCareLog>
@{ Layout = null; }
<!DOCTYPE html>
<html>
<head>
    <title>Care Logs</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
<div class="container mt-5">
    <div class="card shadow-sm p-4 text-dark bg-white">
        <div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-2">
            <h2 class="m-0">Care History</h2>
            <div>
                <a href="/Home/Index" class="btn btn-outline-secondary">Back to Menu</a>
                <a href="/PlantCareLogs/Create" class="btn btn-primary">Add New Log</a>
            </div>
        </div>
        <table class="table table-striped table-hover mt-3">
            <thead class="table-dark">
                <tr>
                    <th>Date</th>
                    <th>Action</th>
                    <th>Plant Name</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model) {
                    <tr>
                        <td>@item.Date.ToShortDateString()</td>
                        <td>@item.ActionTaken</td>
                        <td>@(item.Plant != null ? item.Plant.Name : "ID: " + item.PlantId)</td>
                        <td class="text-center">
                            <a href="/PlantCareLogs/Delete/@item.Id" class="btn btn-sm btn-outline-danger" onclick="return confirm('Delete log?')">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
</body>
</html>