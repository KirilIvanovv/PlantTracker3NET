@{
    Layout = null; 
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
    body {
        background: linear-gradient(135deg, #d9f9d9, #bde0fe);
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .main-card {
        max-width: 480px;
        border-radius: 20px;
        box-shadow: 0 6px 25px rgba(0,0,0,0.15);
        border: none;
        background-color: #fff;
        padding: 2rem;
        text-align: center;
    }
    .btn-success { background-color: #4caf50; border: none; transition: all 0.2s ease; }
    .btn-success:hover { background-color: #43a047; transform: scale(1.05); }
    .btn-primary { background-color: #81c784; border: none; transition: all 0.2s ease; }
    .btn-primary:hover { background-color: #66bb6a; transform: scale(1.05); }
</style>

<div class="card main-card mb-5">
    <h1 class="mb-4">🌱 Plant Tracker</h1>

    <div class="d-flex justify-content-center gap-3">
        <a class="btn btn-success" asp-controller="Plants" asp-action="Create">Add Plant</a>

        <a class="btn btn-primary" asp-controller="Plants" asp-action="Index">My Garden</a>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
