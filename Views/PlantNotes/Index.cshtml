@model IEnumerable<PlantTracker3NET.Models.PlantNote>
@{ Layout = null; }
<!DOCTYPE html>
<html>
<head>
    <title>Plant Notes</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
<div class="container mt-5">
    <div class="card shadow-sm p-4 bg-white">
        <div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-2">
            <h2 class="m-0">My Garden Notes</h2>
            <div>
                <a href="/Home/Index" class="btn btn-outline-secondary">Back to Menu</a>
                <a href="/PlantNotes/Create" class="btn btn-warning">Add New Note</a>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model) {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 border-secondary shadow-sm">
                        <div class="card-body d-flex flex-column">
                            <p class="card-text flex-grow-1">@item.NoteText</p>
                            <hr>
                            <div class="d-flex justify-content-between align-items-center mt-auto">
                                <small class="text-muted">Plant: @(item.Plant != null ? item.Plant.Name : "ID " + item.PlantId)</small>
                                <a href="/PlantNotes/Delete/@item.Id" class="btn btn-sm btn-danger">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
</body>
</html>