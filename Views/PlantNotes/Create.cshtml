@model PlantTracker3NET.Models.PlantNote
@{ Layout = null; }
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<div class="container mt-5"><div class="card p-4 shadow mx-auto" style="max-width: 450px;">
    <h4>New Note</h4>
    <form asp-action="Create" method="post">
        <div class="mb-3"><label>Select Plant</label>
            <select asp-for="PlantId" class="form-control" asp-items="ViewBag.PlantId" required></select>
        </div>
        <div class="mb-3"><label>Your Note</label><textarea asp-for="NoteText" class="form-control" rows="3" required></textarea></div>
        <button type="submit" class="btn btn-warning w-100">Add Note</button>
    </form>
</div></div>