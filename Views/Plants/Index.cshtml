@model IEnumerable<PlantTracker3NET.Models.Plant>
@{ Layout = null; }
<!DOCTYPE html>
<html>
<head>
    <title>My Plants</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
<div class="container mt-5">
    <div class="card shadow-sm p-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="m-0">My Plants</h2>
            <div>
                <a href="/Home/Index" class="btn btn-outline-secondary">Menu</a>
                <a href="/Plants/Create" class="btn btn-success">Add New Plant</a>
            </div>
        </div>
        <table class="table table-bordered table-hover">
            <thead class="table-secondary">
                <tr>
                    <th>Name</th>
                    <th>Category</th>
                    <th>Planted</th>
                    <th>Water Every</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var plant in Model) {
                    <tr>
                        <td class="fw-bold">@plant.Name</td>
                        <td>@(plant.Category?.Name ?? "None")</td>
                        <td>@plant.PlantedDate.ToShortDateString()</td>
                        <td>@plant.WaterEveryDays days</td>
                        <td class="text-center">
                        <a asp-controller="Plants" asp-action="Edit" asp-route-id="@plant.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                        <a asp-controller="Plants" asp-action="Details" asp-route-id="@plant.Id" class="btn btn-sm btn-outline-secondary">Details</a>
                        <a asp-controller="Plants" asp-action="Delete" asp-route-id="@plant.Id" class="btn btn-sm btn-outline-danger" onclick="return confirm('Delete?')">Delete</a>
                    </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
</body>
</html>