@model PlantTracker3NET.Models.Plant

@{
    ViewData["Title"] = "Plant Details";
}

<h1>Plant Details</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Model.Category?.Name</dd>

        <dt class="col-sm-2">Planted Date</dt>
        <dd class="col-sm-10">@Model.PlantedDate.ToShortDateString()</dd>

        <dt class="col-sm-2">Water Every (days)</dt>
        <dd class="col-sm-10">@Model.WaterEveryDays</dd>

        <dt class="col-sm-2">Last Watered</dt>
        <dd class="col-sm-10">@Model.LastWatered?.ToShortDateString()</dd>

        <dt class="col-sm-2">Comment</dt>
        <dd class="col-sm-10">@Model.Comment</dd>
    </dl>

    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</div>
