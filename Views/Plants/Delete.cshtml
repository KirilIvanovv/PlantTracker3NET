@model PlantTracker3NET.Models.Plant

@{
    ViewData["Title"] = "Delete Plant";
}

<h1>Delete Plant</h1>

<h3>Are you sure you want to delete this plant?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Planted Date</dt>
        <dd class="col-sm-10">@Model.PlantedDate.ToShortDateString()</dd>

        <dt class="col-sm-2">Water Every (days)</dt>
        <dd class="col-sm-10">@Model.WaterEveryDays</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id"/>
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
