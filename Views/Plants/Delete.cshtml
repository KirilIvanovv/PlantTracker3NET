@model PlantTracker3NET.Models.Plant
@{ Layout = null; }
<!DOCTYPE html>
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
<div class="container mt-5">
    <div class="card border-danger shadow-sm p-4 mx-auto" style="max-width: 500px;">
        <h4 class="text-danger">Delete Plant?</h4>
        <p>Are you sure you want to remove <strong>@Model.Name</strong> from your garden?</p>
        
        <form asp-action="DeleteConfirmed" method="post" class="mt-4">
            <input type="hidden" asp-for="Id"/>
            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-danger">Confirm Delete</button>
                <a href="/Plants/Index" class="btn btn-outline-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
</body>
</html>